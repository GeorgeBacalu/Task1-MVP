<Window x:Class="Mvp1.Project.Modules.Entertainment.ResultsScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mvp1.Project.Modules.Entertainment"
        mc:Ignorable="d"
        Title="ResultsScreen" Height="450" Width="800">
    <StackPanel Margin="15" VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock Text="{Binding Result, StringFormat='Results: {0}%'}" FontSize="20" FontWeight="Black" Margin="0,0,0,15" />
        <StackPanel Orientation="Horizontal">
            <Button Content="Back" Click="BackButton_Click" Width="100" Height="40" Margin="0,0,20,0" />
            <Button Content="Play again" Click="PlayAgainButton_Click" Width="100" Height="40" />
        </StackPanel>
    </StackPanel>
</Window>
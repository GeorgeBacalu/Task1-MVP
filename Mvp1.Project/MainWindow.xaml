<Window x:Class="Mvp1.Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mvp1.Project"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel HorizontalAlignment="Center">
        <TextBlock Text="Choose module" HorizontalAlignment="Center" Margin="30" FontSize="30" FontWeight="Bold" />
        <StackPanel Orientation="Horizontal">
            <Button x:Name="ButtonAdministrative" Content="Administrative" Width="100" Height="40" Margin="10,0" Click="ButtonAdministrative_Click" />
            <Button x:Name="ButtonWordFinder" Content="Word Finder" Width="100" Height="40" Margin="10,0" Click="ButtonWordFinder_Click" />
            <Button x:Name="ButtonEntertainment" Content="Entertainment" Width="100" Height="40" Margin="10,0" Click="ButtonEntertainment_Click" />
        </StackPanel>
    </StackPanel>
</Window>